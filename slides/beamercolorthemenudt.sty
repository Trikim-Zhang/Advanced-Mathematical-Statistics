\mode<presentation>

% ----------------
% Beamer Theme Color Mode Layout
% Confirmed in v1.3b(2022/04/13).
% Established in v1.3a(2022/03/16).
% ----------------
% PrimaryC - 主题色;                  AuxiliaryC - 辅助色;
% SecondaryAuxiliaryC - 第二辅助色;   IntersperseC - 点缀色;
% NomalTextC - 普通文本色;            AlertedTextC - 强调文本色;
% BlockExampleC - Example 区块样式色; BlockDefinitionC - Definition 区块样式色;
% BlockLemmaC - Lemma 区块样式色;     BlockConditionC - Condition 区块样式色.
% ----------------
\if\EqualOptionsBeamer{ColorDisplay}{JXred}%
    \colorlet{PrimaryC}           {nudtred}
    \colorlet{AuxiliaryC}         {nudtgrey50}
    \colorlet{SecondaryAuxiliaryC}{nudtgrey}
    \colorlet{IntersperseC}       {nudtred60}
    \colorlet{NomalTextC}         {black}
    \colorlet{AlertedTextC}       {nudtred90}
    \colorlet{BlockExampleC}      {nudtgrey!80!black}
    \colorlet{BlockDefinitionC}   {nudtblue}
    \colorlet{BlockLemmaC}        {nudtgreen}
    \colorlet{BlockConditionC}    {nudtyellow}
    \colorlet{HighlightCodeLineC} {nudtred10}
\else\if\EqualOptionsBeamer{ColorDisplay}{BSblue}%
    \colorlet{PrimaryC}           {nudtblue}
    \colorlet{AuxiliaryC}         {nudtgrey50}
    \colorlet{SecondaryAuxiliaryC}{nudtgrey}
    \colorlet{IntersperseC}       {nudtblue60}
    \colorlet{NomalTextC}         {black}
    \colorlet{AlertedTextC}       {nudtblue90}
    \colorlet{BlockExampleC}      {nudtgrey!80!black}
    \colorlet{BlockDefinitionC}   {nudtred}
    \colorlet{BlockLemmaC}        {nudtgreen}
    \colorlet{BlockConditionC}    {nudtyellow}
    \colorlet{HighlightCodeLineC} {nudtblue10}
\fi\fi
